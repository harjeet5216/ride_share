<p id="notice"><%= notice %></p>

<section> 
<div class="ride-index-table">
  <h1>Rides</h1>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Pickup</th>
        <th>Drop</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @rides.each do |ride| %>
        <tr>
          <td><%= ride.pickup %></td>
          <td><%= ride.drop %></td>
          <td><%= ride.user.id %></td>
          <td><%= link_to 'Show', ride %></td>
          <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
          <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <%= link_to '<button>New Ride</button>'.html_safe, new_ride_path %>

</div>
</section>